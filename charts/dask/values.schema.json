{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "dask": {
      "description": "dask specific configuration",
      "type": "object",
      "properties": {
        "scheduler": {
          "description": "scheduler specific configuration",
          "type": "object",
          "properties": {
            "image": {
              "description": "image of the dask scheduler",
              "type": "object",
              "properties": {
                "repository": {
                  "description": "image of the dask scheduler",
                  "type": "string",
                  "enum": ["inseefrlab/rapidsai","inseefrlab/blazingsql"],
                  "default": "inseefrlab/rapidsai"   
                }
              }
            },
            "tolerations": {
              "type": "array",
              "description": "Array of tolerations",
              "default": [],
              "x-form": {
                  "value": "{{region.tolerations}}"
              },
              "x-onyxia": {
                  "overwriteDefaultWith": "region.tolerations"
              }
            },
            "nodeSelector": {
                "type": "object",
                "description": "NodeSelector",
                "default": {},
                "x-form": {
                    "value": "{{region.nodeSelector}}"
                },
                "x-onyxia": {
                    "overwriteDefaultWith": "region.nodeSelector"
                }
            }
          }
        },
        "worker": {
          "description": "worker specific configuration",
          "type": "object",
          "properties": {
            "image": {
              "description": "image of the dask scheder",
              "type": "object",
              "properties": {
                "repository": {
                  "description": "image of the dask worker",
                  "type": "string",
                  "enum": ["inseefrlab/rapidsai","inseefrlab/blazingsql"],
                  "default": "inseefrlab/rapidsai"   
                },
                "dask_worker": {
                  "description": "command of the dask worker",
                  "type": "string",
                  "enum": ["dask-worker","dask-cuda-worker"],
                  "default": "dask-worker"   
                }
              }
            },
            "tolerations": {
              "type": "array",
              "description": "Array of tolerations",
              "default": [],
              "x-form": {
                  "value": "{{region.tolerations}}"
              },
              "x-onyxia": {
                  "overwriteDefaultWith": "region.tolerations"
              }
            },
            "nodeSelector": {
                "type": "object",
                "description": "NodeSelector",
                "default": {},
                "x-form": {
                    "value": "{{region.nodeSelector}}"
                },
                "x-onyxia": {
                    "overwriteDefaultWith": "region.nodeSelector"
                }
            },
            "replicas": {
              "description": "number of worker",
              "type": "integer",
              "default": 3   
            },
            "resources": {
              "description": "Your worker will have at least the requested resources and never more than its limits. No limit for a resource and you can consume everything left on the host machine.",
              "type": "object",
              "properties": {
                  "limits": {
                      "description": "No limit for cpu and memory",
                      "type": "object",
                      "properties": {
                        "nvidia.com/gpu": {
                          "description": "GPU to allocate to this instance. This is also requested",
                          "type": "string",
                          "default": "0",
                          "render": "slider",
                          "sliderMin": 0,
                          "sliderMax": 3,
                          "sliderStep": 1,
                          "sliderUnit": "" 
                        }
                      }
                  }
              }
          }
        }
        }
      }
    },
    "security": {
      "description": "security specific configuration",
      "type": "object",
      "properties": {
        "allowlist": {
          "type": "object",
          "description": "IP protection",
          "properties": {
            "enabled": {
              "type": "boolean",
              "title": "Enable IP protection",
              "description": "Only the configured set of IPs will be able to reach the service",
              "default": true,
              "x-form": {
                "value": "{{region.defaultIpProtection}}"
              },
              "x-onyxia": {
                  "overwriteDefaultWith": "region.defaultIpProtection"
              }
            },
            "ip": {
              "type": "string",
              "description": "the allow list of IP is whitespace",
              "title": "Allowed IP",
              "default": "0.0.0.0/0",
              "x-form": {
                "value": "{{user.ip}}"
              },
              "x-onyxia": {
                "overwriteDefaultWith": "{{user.ip}}"
              },
              "hidden": {
                "value": false,
                "path": "security/allowlist/enabled"
              }
            }
          }
      },
          "networkPolicy": {
            "type": "object",
            "description": "Define access policy to the service",
            "properties": {
              "enabled": {
                "type": "boolean",
                "title": "Enable network policy",
                "description": "Only pod from the same namespace will be allowed",
                "default": true,
                "x-form": {
                  "value": "{{region.defaultNetworkPolicy}}"
                },
                "x-onyxia": {
                    "overwriteDefaultWith": "region.defaultNetworkPolicy"
                }
              },
              "from": {
                "type": "array",
                "description": "Array of source allowed to have network access to your service",
                "default" : [
                    {
                      "ipBlock": {
                        "cidr": "10.233.103.0/32"
                      }
                    },
                    {
                      "ipBlock": {
                        "cidr": "10.233.111.0/32"
                      }
                    }
                  ], 
                "x-form": {
                    "value": "{{region.from}}"
                },
                "x-onyxia": {
                    "overwriteDefaultWith": "region.from"
                }
              }
            }
          }
      }
  },
    "ingress": {
      "type": "object",
      "form": true,
      "title": "Ingress Details",
      "properties": {
        "hostname": {
            "type": "string",
            "form": true,
            "title": "Hostname",
            "x-form": {
              "hidden": true,
              "value": "{{project.id}}-{{k8s.randomSubdomain}}.{{k8s.domain}}"
            },
            "x-onyxia": {
                "hidden": true,
                "overwriteDefaultWith": "{{project.id}}-{{k8s.randomSubdomain}}.{{k8s.domain}}"
            }
        }
      }
    }
  }
}
